	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.1.16.RELEASE</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>
	<groupId>sn.pad</groupId>
	<artifactId>pss-backend</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>pss-backend</name>
	<description>Portail Salarie</description>
	<packaging>war</packaging>
	<properties>
		<java.version>1.8</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<mockito.core.version>3.6.28</mockito.core.version>
		<junit.jupiter.version>5.3.2</junit.jupiter.version><!-- 5.5.2 -->
		<junit.platform.version>1.5.2</junit.platform.version> <!-- 1.6.2 -->
		<junit.vintage.version>5.7.0</junit.vintage.version><!-- 5.5.2-->
		<skip.unit.tests>false</skip.unit.tests>
		<skip.integration.tests>false</skip.integration.tests>
		<!-- Liberty configuration -->
		<liberty.var.default.http.port>8088</liberty.var.default.http.port>
		<liberty.var.default.https.port>9443</liberty.var.default.https.port>
		<liberty.var.app.context.root>${project.artifactId}
		</liberty.var.app.context.root>
	</properties>
	<profiles>
		<profile>
			<id>QualityProfileDefaultJava</id>
			<properties>
				<sonar.profile>DSI_DEV_PAD_DEFAULT_JAVA</sonar.profile>
			</properties>
		</profile>
		<!-- The Configuration of the development profile -->
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<build.profile.id>dev</build.profile.id>
				<!-- Only unit tests are run when the development profile is active -->
				<skip.unit.tests>false</skip.unit.tests>
				<skip.integration.tests>true</skip.integration.tests>
			</properties>
		</profile>
		<!-- The Configuration of the integration-test profile -->
		<profile>
			<id>it</id>
			<properties>
				<build.profile.id>it</build.profile.id>
				<skip.integration.tests>false</skip.integration.tests>
				<skip.unit.tests>true</skip.unit.tests>
			</properties>
		</profile>
	</profiles>

